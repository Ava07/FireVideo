<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    package="com.example.lenovo.firevideo">
    <uses-sdk
        android:minSdkVersion="8"

        android:targetSdkVersion="19" />
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".app.FireVideoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">   <!--隐藏标题栏 -->
        <activity android:name="com.example.lenovo.firevideo.activity.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MineActivity"></activity>
        <activity android:name=".activity.LoginActivity"> </activity>
        <activity android:name=".activity.LoginFastActivity"></activity>
        <activity android:name=".activity.BaseActivity"></activity>
        <activity android:name=".activity.FindPasswordActivity"></activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.GroupActivity"></activity>
        <activity android:name=".activity.MailActivity"></activity>
        <activity android:name=".activity.EditPhonenumActivity"></activity>
        <activity android:name=".activity.EditUserinfoActivity"></activity>
        <activity android:name=".activity.EditUserCityActivity"></activity>

    </application>

</manifest>