            android:name="com.example.lenovo.firevideo.guest.LiveListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.lenovo.firevideo.hoster.LiveEndActivity"
            android:screenOrientation="portrait" />
