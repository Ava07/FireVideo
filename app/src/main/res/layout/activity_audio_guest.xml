<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_bg"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:id="@+id/rl_rtmpc_videos"
        android:layout_width="0dp"
        android:layout_height="0dp"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_room_name"
                android:paddingLeft="4dp"
                android:paddingRight="12dp">

                <com.example.lenovo.firevideo.widgets.CircleImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/icon" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_room_id"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_title"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:gravity="center"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_member"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/shape_room_member"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/img_eye" />

                <TextView
                    android:id="@+id/tv_member_num"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/eye"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_member_num"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/eye"
                    android:gravity="center"
                    android:text="围观群众"
                    android:textColor="@color/white" />
            </RelativeLayout>


        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4">


            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_rtmp_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/dialog_blue" />


                <TextView
                    android:id="@+id/tv_rtmp_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/dialog_blue"/>

                <TextView
                    android:id="@+id/tv_rtc_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/dialog_blue"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_v_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:orientation="vertical"
              >

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/iv_anim_host_v"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.example.lenovo.firevideo.widgets.CircleImageView
                        android:id="@+id/ci_host"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_host_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:text="主播"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ll_v_host"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_hor_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:id="@+id/iv_anim_host_h"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.example.lenovo.firevideo.widgets.CircleImageView
                            android:id="@+id/ci_host_h"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="3dp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_host_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_line_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="24dp"></android.support.v7.widget.RecyclerView>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_msg_list"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
               >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:id="@+id/tv_apply_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_room_apply_audio_line"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:text="连麦"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_apply_line"
                android:src="@drawable/selector_btn_chat" />
            <ImageButton
                android:id="@+id/btn_audio"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/btn_close"
                android:background="@null"
                android:visibility="gone"
                android:src="@drawable/selector_audio_manager" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:src="@mipmap/img_close" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
