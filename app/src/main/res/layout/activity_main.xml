<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
 <!--好像searchview只能够适用于线性布局中-->
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="搜索用户名"
            ></android.support.v7.widget.SearchView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/top"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/top_info"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/tv_one"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="直播"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/tv_two"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="视频"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="同城"
                android:textColor="#000000" />

        </LinearLayout>
        <ImageView
            android:id="@+id/img_cursor"
            android:layout_below="@+id/top_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@mipmap/line" />
        <android.support.v4.view.ViewPager
            android:id="@+id/vpager_four"
            android:layout_below="@+id/img_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="8dp">

            <!--目前通过selector的方式解决了点击radiobutton，换图片-->
            <RadioButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/radiobutton_homepage"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/btn_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/radiobutton_group"
                android:gravity="center_horizontal"
                android:text="关注"
                android:onClick="jumpToGroup"
                android:textColor="#000000" />

            <!--用来消除掉RadioButton标配的圆圈单选按钮-->
            <RadioButton
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@mipmap/add"
                android:gravity="center_vertical" />
            <RadioButton
                android:id="@+id/btn_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/radiobutton_mail"
                android:gravity="center_horizontal"
                android:text="消息"
                android:onClick="jumpToMail"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/btn_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/radiobutton_people"
                android:gravity="center_horizontal"
                android:text="我的"
                android:onClick="jumpToMine"
                android:textColor="#000000" />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>